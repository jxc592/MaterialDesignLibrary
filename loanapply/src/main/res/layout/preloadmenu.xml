<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    >
    <com.guoguang.android.library.customwidget.TitleLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.guoguang.android.library.customwidget.TitleLayout>
     <ListView
         android:layout_below="@id/tl_title"
        android:id="@+id/listView_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="true"
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
         />
    <RelativeLayout 
        android:visibility="gone"
       android:layout_marginLeft="100dip"
       android:layout_marginTop="50dip"
       android:layout_marginRight="100dip"
       android:layout_marginBottom="50dip"
       android:padding="50dip"
        android:background="@drawable/bg_midspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@id/tl_title">
        
        <TextView
            android:id="@+id/undoTvID" 
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="待办事项"
            android:textSize="25sp"
            android:textColor="#cb0051"/>
          <View 
         android:id="@+id/oneLine"
         android:layout_below="@id/undoTvID"
         android:layout_height="1dip"
         android:layout_width="match_parent"
         android:background="@drawable/divider_vertical"/>
        
		<RelativeLayout 
		    android:layout_below="@id/oneLine"
		    android:id="@+id/draftlayoutID"
		    android:layout_width="match_parent"
		    android:gravity="center_vertical"
		    android:layout_height="wrap_content" >
			<ImageView 
			    android:layout_centerVertical="true"
			    android:id="@+id/iv_ic"
			    android:layout_alignParentRight="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/icon_right"
			    />
		    <TextView
		        android:layout_toLeftOf="@id/iv_ic"
		         android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:id="@+id/textView_itemtext"
		        android:layout_width="match_parent"
		        android:gravity="center_vertical"
		        android:textSize="20sp"
		        android:layout_height="40dp"
		        android:text="" />
			
		</RelativeLayout> 
     <View 
         android:id="@+id/twoline"
         android:layout_below="@id/draftlayoutID"
         android:layout_height="1dip"
         android:layout_width="match_parent"
         android:background="@drawable/divider_vertical"/>
     
     
		<RelativeLayout 
		    android:layout_below="@id/twoline"
		    android:id="@+id/retureLayoutID"
		    android:layout_width="match_parent"
		    android:gravity="center_vertical"
		    android:layout_height="wrap_content" >
			<ImageView 
			    android:layout_centerVertical="true"
			    android:id="@+id/returen_iv_ic"
			    android:layout_alignParentRight="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/icon_right"
			    />
		    <TextView
		        android:layout_toLeftOf="@id/returen_iv_ic"
		         android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:id="@+id/return_tv"
		        android:layout_width="match_parent"
		        android:gravity="center_vertical"
		        android:textSize="20sp"
		        android:layout_height="40dp"
		        android:text="" />
			
		</RelativeLayout> 
     <View 
         android:id="@+id/threeline"
         android:layout_below="@id/retureLayoutID"
         android:layout_height="1dip"
         android:layout_width="match_parent"
         android:background="@drawable/divider_vertical"/>
     
   
        
		<RelativeLayout 
		    android:layout_below="@id/threeline"
		    android:id="@+id/newpersonID"
		    android:layout_width="match_parent"
		    android:gravity="center_vertical"
		    android:layout_height="wrap_content" >
			<ImageView 
			    android:layout_centerVertical="true"
			    android:id="@+id/newpersonidp_iv_ic"
			    android:layout_alignParentRight="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/icon_right"
			    />
		    <TextView
		        android:layout_toLeftOf="@id/newpersonidp_iv_ic"
		         android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:id="@+id/newperson_tv"
		        android:layout_width="match_parent"
		        android:gravity="center_vertical"
		        android:textSize="20sp"
		        android:layout_height="40dp"
		        android:text="" />
			
		</RelativeLayout> 
     <View 
         android:id="@+id/fourthline"
         android:layout_below="@id/newpersonID"
         android:layout_height="1dip"
         android:layout_width="match_parent"
         android:background="@drawable/divider_vertical"/>
     <RelativeLayout 
		    android:layout_below="@id/fourthline"
		    android:id="@+id/dbjdcxID"
		    android:layout_width="match_parent"
		    android:gravity="center_vertical"
		    android:layout_height="wrap_content" >
			<ImageView 
			    android:layout_centerVertical="true"
			    android:id="@+id/dbjdcx_iv_ic"
			    android:layout_alignParentRight="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/icon_right"
			    />
		    <TextView
		        android:layout_toLeftOf="@id/dbjdcx_iv_ic"
		         android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:id="@+id/dbjdcx_tv"
		        android:layout_width="match_parent"
		        android:gravity="center_vertical"
		        android:textSize="20sp"
		        android:layout_height="40dp"
		        android:text="" />
			
		</RelativeLayout> 
     <View 
         android:id="@+id/fiveline"
         android:layout_below="@id/dbjdcxID"
         android:layout_height="1dip"
         android:layout_width="match_parent"
         android:background="@drawable/divider_vertical"/>
    </RelativeLayout>

</RelativeLayout>
